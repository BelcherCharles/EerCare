@model EerCare.Models.LineItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Line Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LineItemId" />
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <input type="hidden" asp-for="InvoiceId" class="form-control" />
            <div class="form-group">
                <label asp-for="ProcedureCode" class="control-label"></label>
                <input asp-for="ProcedureCode" class="form-control" />
                <span asp-validation-for="ProcedureCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcedureDesc" class="control-label"></label>
                <input asp-for="ProcedureDesc" class="form-control" />
                <span asp-validation-for="ProcedureDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmtBilled" class="control-label">Amount Billed</label>
                <input asp-for="AmtBilled" class="form-control" />
                <span asp-validation-for="AmtBilled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmtSettled" class="control-label">Amount Settled</label>
                <input asp-for="AmtSettled" class="form-control" />
                <span asp-validation-for="AmtSettled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Invoices" asp-action="Details" asp-route-id="@Model.InvoiceId">Back to Invoice Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
